@page "/assistant-update/{AssistantId}"
@using RChat.UI.Pages.Account
@inherits AssistantInfoUpdateComponent
@attribute [Authorize]

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Update Assistant Information</h3>

                    <EditForm Model="@ViewModel" OnValidSubmit="async () => await SubmitFormAsync()">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label" for="Name">Name:</label>
                            <InputText class="form-control" type="text" id="Name" @bind-Value="ViewModel.Name" />
                        </div>


                        <div class="mb-3">
                            <label class="form-label" for="Instructions">Instructions:</label>
                            <InputText class="form-control" id="Instructions" type="tel" @bind-Value="ViewModel.Instructions" />
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <span class="mx-2">|</span>                           
                            <RadzenButton ButtonStyle="ButtonStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter" Icon="info" class="m-1" Click="() => NavigateBack()" Text="Back"></RadzenButton>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
