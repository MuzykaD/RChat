@attribute [Authorize]
@inherits AssistantInfoComponent
@page "/assistant-info/{AssistantId}"

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Assistant Information</h3>

                    <div class="card-text">
                        <div class="mb-3">
                            <strong>Assistant Name:</strong> @ViewModel.Name
                        </div>

                        <div class="mb-3">
                            <strong>Assistant Chat:</strong> @ViewModel.ChatName
                        </div>

                        <div class="mb-3">
                            <strong>Files Count:</strong> @ViewModel.FilesCount
                        </div>

                        <hr>

                        <RadzenButton ButtonStyle="ButtonStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter" Icon="info" class="m-1" Click="() => NavigateToAssistantUpdate()" Text="Update Assistant!"></RadzenButton> |
                        <RadzenButton ButtonStyle="ButtonStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter" Icon="info" class="m-1" Click="() => NavigateToAssistantFiles()" Text="Manage Files!"></RadzenButton>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>