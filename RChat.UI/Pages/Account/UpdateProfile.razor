@page "/update-profile"
@using RChat.UI.Pages.Account
@inherits UpdateProfileComponent
@attribute [Authorize]

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Update Profile Information</h3>

                    <EditForm Model="@ViewModel" OnValidSubmit="async () => await SubmitFormAsync()">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label" for="Email">Email:</label>
                            <InputText class="form-control" type="email" id="Email" @bind-Value="ViewModel.Email" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="UserName">UserName:</label>
                            <InputText class="form-control" id="UserName" type="text" @bind-Value="ViewModel.UserName" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Phone">Phone:</label>
                            <InputText class="form-control" id="Phone" type="tel" @bind-Value="ViewModel.PhoneNumber" />
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <span class="mx-2">|</span>
                            <a href="change-password" class="btn btn-primary">Change Password</a>
                            <span class="mx-2">|</span>
                            <a href="profile" class="btn btn-primary">Back</a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
