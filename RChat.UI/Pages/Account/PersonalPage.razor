@page "/profile"
@using RChat.UI.Pages.Account
@inherits PersonalPageComponent
@attribute [Authorize]

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Personal Information</h3>

                    <div class="card-text">
                        <div class="mb-3">
                            <strong>Your Name:</strong> @ViewModel.UserName
                        </div>

                        <div class="mb-3">
                            <strong>Your Email:</strong> @ViewModel.Email
                        </div>

                        <div class="mb-3">
                            <strong>Your Phone Number:</strong> @(ViewModel.PhoneNumber ?? "Not set yet!")
                        </div>

                        <hr>

                        <a href="update-profile" class="btn btn-primary">Update Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
