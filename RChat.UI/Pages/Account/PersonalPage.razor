@page "/profile"
@using RChat.UI.Pages.Account;
@inherits PersonalPageComponent
<h3>Personal Information</h3>
<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <p>Your name: @ViewModel.UserName</p>
            <p>Your email: @ViewModel.Email</p>
            <p>your phone number: @(ViewModel.PhoneNumber ?? "Not set yet!")</p>
            <br>
            <a href="update-profile" class="btn btn-primary">Update profile</a>
        </Authorized>
        <NotAuthorized>
            401
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>