@page "/users"
@using RChat.UI.ViewModels;
@inherits UsersListComponent
<h3>RChat Users!</h3>
<RadzenTextBox Placeholder="Search" @bind-Value=@SearchValue TValue="string" Change="async () => await OnChangeAsync()" />
<RadzenDataGrid
   PageSize="5" AllowPaging="true" Data="@EntityList" TItem="UserInformationViewModel">
    <Columns>
        <RadzenDataGridColumn TItem="UserInformationViewModel" Property="Email" Title="Email"> </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="UserInformationViewModel" Property="UserName" Title="UserName"> </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="UserInformationViewModel" Property="PhoneNumber" Title="PhoneNumber"> </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

