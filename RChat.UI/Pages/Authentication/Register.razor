@page "/register"
@inherits RegisterComponent
<h3 class="text-center mb-4">Register</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <EditForm Model="@ViewModel" OnValidSubmit="async () => await SubmitFormAsync()">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label" for="Email">Email:</label>
                    <InputText class="form-control" type="email" id="Email" @bind-Value="ViewModel.Email" />
                    <ValidationMessage For="@(() =>ViewModel.Email)"></ValidationMessage>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="UserName">UserName:</label>
                    <InputText class="form-control" id="UserName" @bind-Value="ViewModel.Username" />
                    <ValidationMessage For="@(() =>ViewModel.Username)"></ValidationMessage>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Password">Password:</label>
                    <InputText class="form-control" id="Password" type="password" @bind-Value="ViewModel.Password" />
                    <ValidationMessage For="@(() =>ViewModel.Password)"></ValidationMessage>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="ConfirmPassword">Confirm Password:</label>
                    <InputText class="form-control" id="ConfirmPassword" type="password" @bind-Value="ViewModel.ConfirmPassword" />
                    <ValidationMessage For="@(() =>ViewModel.ConfirmPassword)"></ValidationMessage>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Register</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 400px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
