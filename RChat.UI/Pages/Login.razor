@page "/login"
@inherits LoginComponent
<h3>Login</h3>

<EditForm Model="@ViewModel" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label for="Email">Email: </label>
        <InputText type="email" id="Email" @bind-Value="ViewModel.Email"/>
    </div>
    <br>
    <div>
        <label for="Password">Password: </label>
        <InputText id="Password" type="password" @bind-Value="ViewModel.Password"/>
    </div>
    <br>
    <div>
        <button type="submit">Submit</button>
    </div>
</EditForm>

